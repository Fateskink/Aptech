@{
}
@model myapp.ViewModels.AddEmployeeViewModel;
<form method="post" asp-controller="Employee" asp-action="AddEmployee">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="employeeNo">Employee Number</label>
            <input type="text" class="form-control" id="employeeNo" name="employeeNo">
        </div>
        <div class="form-group col-md-6">
            <label for="employeeName">Employee Name</label>
            <input type="text" class="form-control" id="employeeName" name="employeeName">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="placeOfWork">Place of Work</label>
            <input type="text" class="form-control" id="placeOfWork" name="placeOfWork">
        </div>
        <div class="form-group col-md-6">
            <label for="phoneNo">Phone Number</label>
            <input type="tel" class="form-control" id="phoneNo" name="phoneNo">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/employees" class="btn btn-secondary">Back to List</a>
            <a href="/employees/create" class="btn btn-success">Add New</a>
        </div>
    </div>
</form>
